    .image-container img {
      width: 100%;
      height: 100%;
      object-fit: fit;
      transition: transform 0.8s ease-in-out;
    }

    .image-container:hover img {
      transform: translateY(-20%);
    }

    /* Responsive for small screens */
    @media (max-width: 576px) {
      .image-container {
