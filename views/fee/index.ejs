<% layout('layout/boilerplate') %>
  <%- include('../includes/sidebar') %>
    <title>Fee Details</title>
    <div class="container-fluid">
      <div class="row">
        <!-- âœ… Main Content -->
        <div class="col-md-9 col-lg-10 ms-sm-auto px-4 py-4">
          <h2 class="text-center text-muted">All Transactions of <%= student.name %>
          </h2>
          <a href="/admin/students/<%= student._id %>" class="btn btn-sm btn-secondary">Back</a>
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 border-bottom pb-2">

          </div>

          <% if (fees.length===0) { %>
            <div class="alert alert-info">No fees found for this student.</div>
            <% } else { %>
              <div class="card shadow-sm border-0">
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle text-center">
                      <thead class="table-dark">
                        <tr>
                          <th>Fee Amount</th>
                          <th>Paid Amount</th>
                          <th>Deposit Date</th>
                          <th>Valid To</th>
                          <th>Notes</th>
                          <th>Paid Month</th>
                          <th>Delete</th>
                          <th>Edit</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% fees.forEach(fee=> { %>
                          <tr>
                            <td>
                              <%= fee.feeAmount %>
                            </td>
                            <td>
                              <%= fee.paidAmount %>
                            </td>
                            <td>
                              <%= fee.feeDepositDate ? fee.feeDepositDate.toDateString() : '-' %>
                            </td>
                            <td>
                              <%= fee.validTo.toDateString() %>
                            </td>
                            <td>
                              <%= fee.notes || '-' %>
                            </td>
                            <td>
                              <%= fee.month %>
                            </td>
                            <td>
                              <a href="/admin/students/<%= student._id %>/fee/<%= fee._id %>/edit"
                                class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                              </a>

                            </td>
                            <td>
                              <form action="/admin/students/<%= student._id %>/fee/<%= fee._id %>?_method=DELETE"
                                method="POST" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                  <i class="bi bi-trash"></i> Delete
                                </button>
                              </form>
                            </td>
                            
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <% } %>
        </div>
      </div>
    </div>