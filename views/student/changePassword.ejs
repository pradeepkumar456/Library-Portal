<% layout('layout/boilerplate') %>

<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 90vh;">
  <div class="row w-100 px-3">
    <div class="col-md-6 col-lg-5 col-xl-4 mx-auto">
      <div class="card shadow-lg border-0 p-4" style="border-radius: 1rem;">
        <h3 class="mb-4 text-center text-primary fw-bold">Change Password</h3>
        <hr/>
        <form action="/student/change-password" method="POST">
          
          <div class="mb-3">
            <label for="newPassword" class="form-label fw-semibold">New Password:</label>
            <input type="password" name="newPassword" id="newPassword" 
              class="form-control form-control-lg" placeholder="Enter new password" required>
          </div>
          
          <div class="mb-3">
            <label for="confirmPassword" class="form-label fw-semibold">Confirm Password:</label>
            <input type="password" name="confirmPassword" id="confirmPassword" 
              class="form-control form-control-lg" placeholder="Re-enter new password" required>
          </div>
          
          <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold" style="border-radius: 0.5rem;">
            Change Password
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
