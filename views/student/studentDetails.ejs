<% layout('layout/boilerplate') %>

  <body class="bg-light ">
    <div class="container mt-4">
      <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white text-center py-3">
          <h2 class="mb-0">Student Profile</h2>
        </div>
        <div class="card-body">
          <h4 class="text-muted mb-4 text-center">Welcome, <%= student.name %>!</h4>

          <table class="table table-striped table-bordered">
            <tbody>
              <tr>
                <th scope="row">Full Name:</th>
                <td>
                  <%= student.name %>
                </td>
              </tr>
              <tr>
                <th scope="row">SrNo:</th>
                <td>
                  <%= student.srNo %>
                </td>
              </tr>
              <tr>
                <th scope="row">Seat Number:</th>
                <td>
                  <%= student.seatNumber %>
                </td>
              </tr>
              <tr>
                <th scope="row">Phone:</th>
                <td>
                  <%= student.phone %>
                </td>
              </tr>
              <tr>
                <th scope="row">Father's Name:</th>
                <td>
                  <%= student.fatherName %>
                </td>
              </tr>
              <tr>
                <th scope="row">Date of Birth:</th>
                <td>
                  <%= student.dob ? ("0" + student.dob.getDate()).slice(-2) + "/" + ("0" + (student.dob.getMonth() +
                    1)).slice(-2) + "/" + student.dob.getFullYear() : '' %>
                </td>
              </tr>
              <tr>
                <th scope="row">Gender:</th>
                <td>
                  <%= student.gender %>
                </td>
              </tr>
               <tr>
                <th scope="row">Admission Date:</th>
                <td>
                  <%= student.admissionDate ? student.admissionDate.toDateString() : '' %>
                </td>
              </tr>
              <tr>
                <th scope="row">Fee Amount:</th>
                <td> &#8377; <%= student.feeAmount %>
                </td>
              </tr>
              <tr>
                <th scope="row">Fee Deposit Date: </th>
                <td>
                  <%= student.feeDepositDate ? student.feeDepositDate.toDateString() : '' %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="text-danger">Valid To:</th>
                <td class="text-danger">
                  <%= student.validTo ? student.validTo.toDateString() : '' %>
                </td>
              </tr>

             
              <tr>
                <th scope="row">Address:</th>
                <td>
                  <%= student.address %>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="d-flex justify-content-center">
          <form action="/student/logout" method="get" class="mx-4">
            <button class="btn btn-outline-primary ">Logout</button>
          </form>
           <form action="/student/change-password" method="get" >
            <button class="btn btn-outline-danger ">Change Password</button>
          </form>
          </div>
        </div>
      </div>
    </div>
  </body>
  <br /> <br />