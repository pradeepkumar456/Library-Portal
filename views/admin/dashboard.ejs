<%- include('../includes/sidebar') %>
<% layout('layout/boilerplate') %>

<style>
  /* Profile Card */
  .profile-card {
    max-width: 600px;
    margin: auto;
    margin-top: 40px;
    background-color: #fff;
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .profile-img {
    width: 150px;
    height: 150px;
    object-fit: fit;
    border-radius: 50%;
    margin-bottom: 20px;
    border: 4px solid #ddd;
  }
  .profile-img:hover {
    transform: scale(1.1) !important;
     transition: transform 0.6s ease, box-shadow 0.6s ease-in-out; 
    box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.4) !important;
  }

  .profile-info h3 {
    font-weight: 600;
  }

  .btn-group a {
    margin: 0 10px;
  }

  /* Dashboard Stat Cards */
  .stat-card {
    border-radius: 10px;
    padding: 20px;
    text-align: center;
    color: #fff;
    box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    transition: transform 0.2s ease-in-out;
  }
  .stat-card:hover {
    transform: translateY(-5px);
  }
  .stat-card h4 {
    font-size: 1.1rem;
    margin-bottom: 10px;
  }
  .stat-card p {
    font-size: 1.6rem;
    font-weight: bold;
  }

  /* Main content spacing to avoid sidebar overlap */
  .main-content {
    margin-left: 260px; /* sidebar width */
    padding: 20px;
  }

  @media (max-width: 992px) {
    .main-content {
      margin-left: 0; /* small screen me sidebar ke niche content aa jaye */
    }
  }
</style>

<!-- Main Content Wrapper -->
<div class="main-content">
  <div class="container">
    <!-- Profile Card -->
    <div class="profile-card bg-light mt-5">
      <img src="<%= admin.image.url %>" alt="Admin Photo" class="profile-img"  />

      <div class="profile-info">
        <h3><%= admin.name %> </h3>
        <p><strong>Email:</strong> <%= admin.email %></p>
        <p><strong>Role:</strong> <%= admin.role %> </p>
        <p><strong>Location:</strong> <%= admin.location %></p>
      </div>

      <div class="btn-group mt-4">
        <a href="/admin/<%= admin._id %>/edit" class="btn btn-primary">Edit Profile</a>
        <a href="/admin/change-password" class="btn btn-warning">
          ðŸ”’ Change Password
        </a>
        <a href="/admin/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>
       <!-- HR line visible only on small screens -->
  <div class=" my-4">
    <hr>
  </div>
    <!-- Dashboard Cards -->
    
      

     <div class="row mt-5 g-4">
      <div class="col-md-4">
        <div class="stat-card bg-primary ">
          <h4>Total Students</h4>
          <p><%= totalStudents %></p>
          <a href="/admin/students" class="btn btn-light btn-sm">Manage Students</a>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-card bg-success">
          <h4>Query</h4>
          <p><%= totalQuery %></p>
          <a href="/admin/query" class="btn btn-light btn-sm">Query</a>
        </div>
      </div>
